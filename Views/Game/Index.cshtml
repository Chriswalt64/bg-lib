@model IEnumerable<bg_lib.Models.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPlayToWin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsInCirculation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCheckedOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastCheckoutDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastCheckinDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPlayToWin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsInCirculation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCheckedOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastCheckoutDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastCheckinDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
